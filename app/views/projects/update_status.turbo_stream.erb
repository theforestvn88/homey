<%= clear_modal %>

<% if @result.success %>
    <%= turbo_stream.update "#{dom_id(@project)}_status" do %>
        <%= t(@update_status) %>
    <% end %>

    <%= turbo_stream.prepend "#{dom_id(@project)}_comments" do %>
        <%= render @result.data[:comment] %>
    <% end %>
<% end %>

<%= show_flash_if_any %>
