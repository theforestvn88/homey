<%= turbo_stream.append "#{dom_id(@project)}_comments" do %>
    <%= render @comments %>
<% end %>

<% if @next_offset %>
    <%= turbo_stream.replace "#{dom_id(@project)}_load_more" do %>
        <%= link_to "load more", load_more_comments_project_path(id: @project.id, offset: @next_offset), data: {turbo_stream: true}, id: "#{dom_id(@project)}_load_more", class: "text-gray-600 border border-dashed border-indigo-300 hover:bg-gray-100 w-96 min-h-5 px-10 flex items-center" %>
    <% end %>
<% else %>
    <%= turbo_stream.remove "#{dom_id(@project)}_load_more" %>
<% end %>
