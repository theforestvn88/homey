<%= turbo_stream.append "#{dom_id(@project)}_comments" do %>
    <%= render partial: 'comments/comment', collection: @comments, cache: true %>
<% end %>

<% if @next_offset %>
    <%= turbo_stream.replace "#{dom_id(@project)}_load_more" do %>
        <%= render partial: 'projects/load_more', locals: { project: @project, next_offset: @next_offset } %>
    <% end %>
<% else %>
    <%= turbo_stream.remove "#{dom_id(@project)}_load_more" %>
<% end %>
