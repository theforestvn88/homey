<%= turbo_frame_tag dom_id(comment) do %>
  <div class="border border-indigo-600 relative">
      <%= comment.content %>
      <span class="flex justify-end absolute bottom-0 right-0 z-10">
          <%= link_to "edit", edit_project_comment_path(id: comment.id, project_id: comment.project_id), data: {turbo_frame: :modal}, class: "text-indigo-600 underline hover:bg-indigo-200" %>
          <%= link_to "delete", project_comment_path(project_id: comment.project_id, id: comment.id), data: {turbo_method: :delete, turbo_confirm: "Are you sure ?"}, class: "text-indigo-600 underline hover:bg-indigo-200 mx-2" %>
      </span>
  </div>
<% end %>
